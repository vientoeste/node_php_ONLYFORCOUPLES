{% extends 'layout.html' %}

{% block content %}
<div class='login'>
	<form action="/auth/login" method="post">
		<div class="container">
			<div class="profile-wrap">
				<div class="profile">
					<form id="login-form" action="/auth/login" method="post">
						<div class="input-group">
							<label for="username">ID</label>
							<input id="username" type="username" name="username" required autofocus>
						</div>
						<div class="input-group">
							<label for="password">PW</label>
							<input id="password" type="password" name="password" required>
						</div>
						<button id="login" type="submit" class="btn">로그인</button>
					</form>
				</div>
			</div>
			<div class="timeline">
				<input type="checkbox" id="regBtn" style="position: fixed; left:-9999px">
				<label for="regBtn" class="regBtn" style="cursor:pointer">회원가입</label>
				<div class='reg'>
          <form id="register-form" action="/auth/register" method="post">
            <div class="input-group">
              <label for="register-username">아이디</label>
              <input id="register-username" type="username" name="username">
            </div>
            <div class="input-group">
              <label for="register-password">비밀번호</label>
              <input id="register-password" type="password" name="password">
            </div>
            <button id="register-btn" type="submit" class="btn">회원가입</button>
          </form>
				</div>
			</div>
		</div>
	</form>
</div>
{% endblock %}
{% block script %}
<script>
    window.onload = () => {
    if (new URL(location.href).searchParams.get('error')) {
      alert(new URL(location.href).searchParams.get('error'));
    }
  };
</script>
{% endblock %}